# InvenTree environment variables for docker compose deployment

# InvenTree Configuration
# Ensure debug is false for a production setup
INVENTREE_DEBUG=False
INVENTREE_LOG_LEVEL=WARNING

# Database configuration options
INVENTREE_DB_ENGINE=postgresql
INVENTREE_DB_NAME=inventree
INVENTREE_DB_HOST=inventree-db
INVENTREE_DB_PORT=5432

# Database credentials
# CHANGE THESE FOR PRODUCTION!
INVENTREE_DB_USER=inventree
INVENTREE_DB_PASSWORD=CHANGE_THIS_PASSWORD

# Redis cache setup
INVENTREE_CACHE_ENABLED=True
INVENTREE_CACHE_HOST=inventree-cache
INVENTREE_CACHE_PORT=6379

# Options for gunicorn server
INVENTREE_GUNICORN_TIMEOUT=90

# Enable custom plugins?
INVENTREE_PLUGINS_ENABLED=True

# Run migrations automatically?
INVENTREE_AUTO_UPDATE=True

# Image tag that should be used
# Use a specific version tag (e.g., 0.16.6, 1.0.0) instead of 'stable'
# The 'stable' tag does NOT include the frontend!
INVENTREE_TAG=0.16.6

# Web Port
INVENTREE_WEB_PORT=8000

# Site URL - update this to match your host
INVENTREE_SITE_URL=http://localhost:8000

# Secret Key (Critical for security!)
INVENTREE_SECRET_KEY=CHANGE_THIS_SECRET_KEY

# Admin User (Optional - un-comment to auto-create)
# INVENTREE_ADMIN_USER=admin
# INVENTREE_ADMIN_PASSWORD=admin_password
# INVENTREE_ADMIN_EMAIL=admin@example.com

# Email Configuration (SMTP)
# Configure these to enable email notifications
INVENTREE_EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
INVENTREE_EMAIL_HOST=mail.press-cloud.com
INVENTREE_EMAIL_PORT=465
INVENTREE_EMAIL_USERNAME=erp-inventree@press-cloud.com
INVENTREE_EMAIL_PASSWORD=CHANGE_THIS_EMAIL_PASSWORD
INVENTREE_EMAIL_TLS=False
INVENTREE_EMAIL_SSL=True
INVENTREE_EMAIL_SENDER=erp-inventree@press-cloud.com
INVENTREE_EMAIL_PREFIX=[InvenTree]
